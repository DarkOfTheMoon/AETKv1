FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sampleDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

interpolationScheme cellPoint;

setFormat       raw;

sets
(
    line
    {
        type    uniform;
        axis    x;
        start   ( 0 0 0 );
        end     ( 0.2 0 0 );
        nPoints 100;
    }
);

fields          ( wallHeatFlux );


